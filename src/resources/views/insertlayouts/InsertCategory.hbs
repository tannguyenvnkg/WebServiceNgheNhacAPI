<h1>Thêm thể loại</h1>

<div class="mt-4 col-lg-4">
    <form method="post" action="insertCategoryPost" enctype="multipart/form-data">
        <div class="form-group">
            <label for="categoryname">Tên thể loại</label>
            <input type="text" name="categoryname" class="form-control" id="categoryname" placeholder="Tên thể loại" required>
        </div>
        <div class="form-group">
            <label for="image">chọn hình</label>
            <input type="file" class="form-control-file" id="image" name="image" accept=".png, .jpg" required>
        </div>
        <button type="submit" class="btn btn-primary">Thêm Thể Loại</button>
    </form>
</div>