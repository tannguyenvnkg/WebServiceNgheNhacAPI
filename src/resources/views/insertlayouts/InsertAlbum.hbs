<h1>Thêm album</h1>

<div class="mt-4 col-lg-4">
    <form method="post" action="InsertAlbumPost" enctype="multipart/form-data">
        <div class="form-group">
            <label for="albumname">Tên album</label>
            <input type="text" name="albumname" class="form-control" id="albumname" placeholder="Tên album" required>
        </div>

        <div class="form-group">
            <label for="image">chọn hình</label>
            <input type="file" class="form-control-file" id="image" name="image" accept=".png, .jpg" required>
        </div>
        
        {{#each singers}}
        <div class="form-check">
            <input class="form-check-input" type="radio" name="singerId" id="{{this._id}}" value="{{this._id}}" checked required>
            <label class="form-check-label" for="{{this._id}}"> {{this.singername}} </label>
        </div>
        {{/each}}
        <button type="submit" class="btn btn-primary">Thêm album</button>
    </form>
</div>