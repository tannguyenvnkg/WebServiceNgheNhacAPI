<h1>Thêm bài hát</h1>

<div class="mt-4 col-lg-6">
    <form method="post" action="insertSongPost" enctype="multipart/form-data"> 
        <div class="form-group">
            <label for="title">Tên bài hát</label>
            <input type="text" name="title" class="form-control col-lg-6" id="title" placeholder="Tên Song" required>
        </div>
        <div class="form-group">
            <label for="imageSong">chọn hình cho bài hát</label>
            <input type="file" class="form-control-file" id="imageSong" name="imageSong" accept=".png, .jpg" required>
        </div>
        <div class="form-group">
            <label for="song">chọn bài hát (*mp3)</label>
            <input type="file" class="form-control-file" id="song" name="song" accept=".mp3" required>
        </div>

        <h3>Thể loại nhạc</h3>
        {{#each categories}}
            <div class="form-check col-lg-6">
                <input class="form-check-input" type="checkbox" name="categoryId[]" id="{{this._id}}" value="{{this._id}}" >
                <label class="form-check-label" for="{{this._id}}"> {{this.categoryname}} </label>
            </div>
        {{/each}}

        <h3>Ca sĩ</h3>
        {{#each singers}}
            <div class="form-check col-lg-6">
                <input class="form-check-input" type="checkbox" name="singerId[]" id="{{this._id}}" value="{{this._id}}" >
                <label class="form-check-label" for="{{this._id}}"> {{this.singername}} </label>
            </div>
        {{/each}}

        <h3>Playlist</h3>
        {{#each playlists}}
            <div class="form-check col-lg-6">
                <input class="form-check-input" type="checkbox" name="playlistId[]" id="{{this._id}}" value="{{this._id}}" >
                <label class="form-check-label" for="{{this._id}}"> {{this.playlistname}} </label>
            </div>
        {{/each}}

        <button type="submit" class="btn btn-primary">Thêm bài hát</button>
    </form>
</div>