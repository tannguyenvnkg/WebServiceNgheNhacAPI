{{> LinkManage}}
<h1>Danh sách Thể loại</h1>
<div class="ml-3 mr-3">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Index</th>
                <th scope="col">Tên thể loại</th>
                <th scope="col">Chỉnh sửa</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <th scope="row">{{sumIndex @index 1}}</th>
                <td>{{this.categoryname}}</td>
                <td> 
                    <a href="/manage/Category/{{this._id}}">Sửa</a> |
                    <a href="#" data-toggle="modal" data-target="#ModalDelete" data-id="{{this._id}}" data-action="/Manage/Category/">Xóa</a>
                </td>
            </tr>
           {{/each}}
        </tbody>
    </table>
</div>

{{> ModalDelete}}
